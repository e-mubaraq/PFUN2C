#include    <iostream>
#include    <cstdlib>
#include    <string>

#include    "../include/PlayCard.h"

int main(int argc, char **argv)
{
    PlayCard card1;
    PlayCard card2("10", "d");
    PlayCard c3, c4;

    card1.printCard();
    card2.printCard();

    c3.promptCard();
    c4.promptCard();

    if (c3 == c4)
        cout << "The Cards are Equal: " << c3.printCard();
    else if (c3 > c4)
        cout << " High Card: " << c3.printCard() << endl << "Low Card : " << c4.printCard();


}
